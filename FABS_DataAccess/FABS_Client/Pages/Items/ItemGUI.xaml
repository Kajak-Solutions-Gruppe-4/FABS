<Page x:Class="FABS_Client.Pages.Items.ItemGUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FABS_Client.Pages.Items"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemGUI">

    <Grid Background="White">
        <Frame x:Name="ItemGUI" NavigationUIVisibility="Hidden"/>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="20" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="auto" />
            <ColumnDefinition Width ="*" />
            <ColumnDefinition Width ="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>

            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <!--Menu Navigation-->
        <Button x:Name="ButtonHome" Content="Forside" Grid.Column="1" Grid.Row="1" Width="75" Height="20" Grid.RowSpan="10" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="ButtonMember" Content="Medlemmer" Grid.Column="2" Grid.Row="1" Width="75" Height="20" Grid.RowSpan="10" VerticalAlignment="Top" Click="ButtonMember" FontWeight="SemiBold"/>
        <Button x:Name="ButtonStorage" Content="Lager" Grid.Column="3" Grid.Row="1" Width="75" Click="ButtonStorage" FontWeight="SemiBold"/>
        <Button x:Name="ButtonEquipment" Content="Udstyr Udlån" Grid.Column="4" Grid.Row="1" Width="75" FontWeight="SemiBold" Click="ButtonEquipment"/>
        <Button x:Name="ButtonBooking" Content="Booking" Grid.Column="5" Grid.Row="1" Width="75" FontWeight="SemiBold" Click="ButtonBooking"/>


        <TextBlock Grid.Column="1" Grid.Row="4" FontSize="20" FontWeight="Bold" Text="Opret Kajak" FontFamily="Segce UI" Grid.ColumnSpan="4" Margin="15"/>

        <!--Create Item label & texfeild-->
        <TextBlock Grid.Column="1" Grid.Row="6" FontSize="12" FontWeight="Bold" Text="--- Member List ---" FontFamily="Segce UI" Grid.ColumnSpan="4" Margin="15" TextAlignment="Center"/>


        <Button x:Name="createKayakButton" Content="Opret Kajak" Grid.Column="1" Grid.Row="14" Width="75" Click="CreateKyakButton"/>

    </Grid>
</Page>
